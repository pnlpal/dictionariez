{
    "manifest_version": 3,
    "minimum_chrome_version": "105",
    "name": "Dictionariez: Your Dictionary, Your Language",
    "description": "A customizable dictionary extension that supports double-click lookups in 20+ languages, 1000+ dictionaries, and Anki integration.",
    "permissions": ["activeTab", "tabs", "storage", "contextMenus", "offscreen"],
    "background": {
        "service_worker": "background.bundle.js"
    },
    "content_scripts": [
        {
            "js": ["preinject.bundle.js"],
            "matches": ["<all_urls>"],
            "run_at": "document_start"
        },
        {
            "js": ["inject.bundle.js"],
            "matches": ["<all_urls>"],
            "all_frames": true
        },
        {
            "js": ["tts-player-webcomponent.bundle.js", "translator-webcomponent.bundle.js"],
            "matches": ["<all_urls>"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "web_accessible_resources": [
        {
            "resources": ["*.js", "*.json", "*.html", "fonts/*"],
            "matches": ["<all_urls>"]
        }
    ],
    "action": {
        "default_title": "Dictionariez: one to rule them all"
    },
    "icons": {
        "16": "images/library-16.png",
        "32": "images/library-32.png",
        "64": "images/library-64.png",
        "128": "images/library-128.png"
    }
}
