{
  "manifest_version": 3,
  "minimum_chrome_version": "116",
  "name": "Dictionariez: Your Dictionary, Your Language",
  "permissions": ["activeTab", "tabs", "storage", "contextMenus", "sidePanel"],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "js": ["preinject.bundle.js"],
      "matches": ["<all_urls>"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "js": ["inject.bundle.js"],
      "matches": ["<all_urls>"],
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.json", "*.html", "fonts/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "Dictionariez: one to rule them all"
  },
  "icons": {
    "64": "images/library-64.png",
    "128": "images/library-128.png"
  }
}
