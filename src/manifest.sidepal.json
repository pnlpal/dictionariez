{
    "manifest_version": 3,
    "minimum_chrome_version": "116",
    "name": "SidePal: Your Language and AI Ally in Side Panel",
    "description": "Dictionaries, translations, and AI assistance right in your browser's side panel.",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "contextMenus",
        "offscreen",
        "sidePanel",
        "declarativeNetRequestWithHostAccess"
    ],
    "background": {
        "service_worker": "background.bundle.js"
    },
    "host_permissions": [
        "https://*.chatgpt.com/",
        "https://*.vocabulary.com/",
        "https://*.deepl.com/",
        "https://*.ldoceonline.com/",
        "https://*.collinsdictionary.com/",
        "https://*.cambridge.org/",
        "https://youglish.com/",
        "https://*.reverso.net/",
        "https://glosbe.com/"
    ],
    "content_scripts": [
        {
            "js": ["preinject.bundle.js"],
            "matches": ["<all_urls>"],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "js": ["inject.bundle.js"],
            "matches": ["<all_urls>"],
            "all_frames": true
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "web_accessible_resources": [
        {
            "resources": ["*.js", "*.json", "*.html", "fonts/*"],
            "matches": ["<all_urls>"]
        }
    ],
    "action": {
        "default_title": "SidePal: Your Language Ally in Side Panel"
    },
    "icons": {
        "48": "images/sidepal-48.png",
        "128": "images/sidepal-128.png"
    }
}
