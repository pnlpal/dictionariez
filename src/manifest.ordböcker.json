{
    "manifest_version": 3,
    "minimum_chrome_version": "105",
    "name": "Ordböcker - Dictionary & AI Translation for Swedish, Norwegian & Danish",
    "description": "A customizable dictionary extension that supports double-click lookups, AI translations, reading aloud, and anki integration.",
    "permissions": ["activeTab", "tabs", "storage", "contextMenus", "offscreen"],
    "background": {
        "service_worker": "background.bundle.js"
    },
    "content_scripts": [
        {
            "js": ["preinject.bundle.js"],
            "matches": ["<all_urls>"]
        },
        {
            "js": ["inject.bundle.js"],
            "matches": ["<all_urls>"],
            "all_frames": true
        },
        {
            "js": ["tts-player-webcomponent.bundle.js", "translator-webcomponent.bundle.js"],
            "matches": ["<all_urls>"],
            "all_frames": true
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "web_accessible_resources": [
        {
            "resources": ["*.js", "*.json", "*.html", "fonts/*"],
            "matches": ["<all_urls>"]
        }
    ],
    "action": {
        "default_title": "Ordböcker: Swedish, Norwegian & Danish Dictionaries"
    },
    "icons": {
        "32": "images/ordbocker-32.png",
        "48": "images/ordbocker-48.png",
        "128": "images/ordbocker-128.png",
        "256": "images/ordbocker-256.png"
    }
}
